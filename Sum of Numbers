#include <iostream>
using namespace std;

int main() {
  int x, y;
  int c =0;
  cout<<"Give me two numbers and i will give you the sum of all the numbers in that range "<< endl;
  cout<<"Lower bound: ";
  cin>>x;
  cout<<"Upper bound:" ;
  cin>>y;


  while (x<=y){
  c = c + y;
  x++;
}
 cout<<" the sum of the integers is: "<< c << endl;
 return 0;
}

